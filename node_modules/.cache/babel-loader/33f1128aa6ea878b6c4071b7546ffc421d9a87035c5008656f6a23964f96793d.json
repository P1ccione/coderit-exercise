{"ast":null,"code":"import Button from \"./Button\";\nexport default {\n  name: \"EditTeacher\",\n  data() {\n    return {\n      id: \"\",\n      firstname: \"\",\n      lastname: \"\",\n      email: \"\",\n      phonenumber: \"\"\n    };\n  },\n  components: {\n    Button\n  },\n  props: {\n    teacher: {\n      type: Object,\n      default: null\n    }\n  },\n  watch: {\n    teacher: {\n      handler(newTeacher) {\n        // Aggiorna i valori degli input quando cambia l'oggetto teacher\n        this.firstname = newTeacher ? newTeacher.firstname : \"\";\n        this.lastname = newTeacher ? newTeacher.lastname : \"\";\n        this.email = newTeacher ? newTeacher.email : \"\";\n        this.phonenumber = newTeacher ? newTeacher.phonenumber : \"\";\n      },\n      immediate: true\n    }\n  },\n  methods: {\n    submitForm(e) {\n      e.preventDefault();\n      console.log(this.id);\n      if (!this.firstname) {\n        alert('Please add the first name');\n        return;\n      } else if (!this.lastname) {\n        alert('Please add the last name');\n        return;\n      } else if (!this.email) {\n        alert('Please add the email address');\n        return;\n      } else if (!this.phonenumber) {\n        alert('Please add the phone number');\n        return;\n      }\n      const newTeacher = {\n        firstname: this.firstname,\n        lastname: this.lastname,\n        email: this.email,\n        phonenumber: this.phonenumber\n      };\n      this.$emit('edit-teacher', newTeacher);\n      this.firstname = '';\n      this.lastname = '';\n      this.email = '';\n      this.phonenumber = '';\n    }\n  }\n};","map":{"version":3,"names":["Button","name","data","id","firstname","lastname","email","phonenumber","components","props","teacher","type","Object","default","watch","handler","newTeacher","immediate","methods","submitForm","e","preventDefault","console","log","alert","$emit"],"sources":["C:\\Users\\SimonePiscozzo\\vue-exercise\\src\\components\\EditTeacher.vue"],"sourcesContent":["<template>\r\n    <Button @btn-click=\"$emit('toggle-edit-teacher')\" text=\"CLOSE FORM\" />\r\n    <form @submit=\"submitForm\">\r\n        <div class=\"input-container\">\r\n            <label for=\"firstname\">First Name</label>\r\n            <input type=\"text\" name=\"firstname\" id=\"firstname\" v-if=\"teacher && teacher.firstname\" :value=\"teacher.firstname\" />\r\n        </div>\r\n        <div class=\"input-container\">\r\n            <label for=\"lastname\">Last Name</label>\r\n            <input type=\"text\" name=\"lastname\" id=\"lastname\" v-if=\"teacher && teacher.lastname\" :value=\"teacher.lastname\" />\r\n        </div>\r\n        <div class=\"input-container\">\r\n            <label for=\"email\">Email</label>\r\n            <input type=\"email\" name=\"email\" id=\"email\" v-if=\"teacher && teacher.email\" :value=\"teacher.email\" />\r\n        </div>\r\n        <div class=\"input-container\">\r\n            <label for=\"phonenumber\">Phone Number</label>\r\n            <input type=\"tel\" name=\"phonenumber\" id=\"phonenumber\" v-if=\"teacher && teacher.phonenumber\" :value=\"teacher.phonenumber\" />\r\n        </div>\r\n        <input type=\"submit\" value=\"EDIT TEACHER\"/>\r\n    </form>\r\n</template>\r\n\r\n<script>\r\nimport Button from \"./Button\";\r\n\r\nexport default {\r\n  name: \"EditTeacher\",\r\n  data() {\r\n    return {\r\n      id: \"\",\r\n      firstname: \"\",\r\n      lastname: \"\",\r\n      email: \"\",\r\n      phonenumber: \"\",\r\n    };\r\n  },\r\n  components: {\r\n    Button,\r\n  },\r\n  props: {\r\n    teacher: {\r\n      type: Object,\r\n      default: null,\r\n    },\r\n  },\r\n  watch: {\r\n    teacher: {\r\n      handler(newTeacher) {\r\n        // Aggiorna i valori degli input quando cambia l'oggetto teacher\r\n        this.firstname = newTeacher ? newTeacher.firstname : \"\";\r\n        this.lastname = newTeacher ? newTeacher.lastname : \"\";\r\n        this.email = newTeacher ? newTeacher.email : \"\";\r\n        this.phonenumber = newTeacher ? newTeacher.phonenumber : \"\";\r\n      },\r\n      immediate: true,\r\n    },\r\n  },\r\n  methods: {\r\n    submitForm(e){\r\n        e.preventDefault()\r\n        console.log(this.id);\r\n        if(!this.firstname) {\r\n            alert('Please add the first name')\r\n            return\r\n        } else if(!this.lastname) {\r\n            alert('Please add the last name')\r\n            return\r\n        }else if(!this.email) {\r\n            alert('Please add the email address')\r\n            return\r\n        }  else if(!this.phonenumber) {\r\n            alert('Please add the phone number')\r\n            return\r\n        }\r\n        const newTeacher = {\r\n            firstname: this.firstname,\r\n            lastname: this.lastname,\r\n            email: this.email,\r\n            phonenumber: this.phonenumber,\r\n        }\r\n\r\n        this.$emit('edit-teacher', newTeacher)\r\n        \r\n        this.firstname = ''\r\n        this.lastname = ''\r\n        this.email = ''\r\n        this.phonenumber = ''\r\n    }\r\n  },\r\n};\r\n</script>\r\n             \r\n<style scoped>\r\n    form {\r\n        width: auto;\r\n        min-width: 400px;\r\n        background: ghostwhite;\r\n        display: flex;\r\n        justify-content: center;\r\n        align-items: center;\r\n        height: auto;\r\n        padding-bottom: 40px;\r\n        padding-top: 40px;\r\n        flex-direction: column;\r\n        row-gap: 10px;\r\n        border-radius: 50px;\r\n    }\r\n\r\n    form .input-container {\r\n        display: flex;\r\n        flex-direction: column;\r\n    }\r\n\r\n    form input {\r\n        width: 200px;\r\n        height: 35px;\r\n        padding-left: 10px;\r\n    }\r\n\r\n    form input[type=\"submit\"] {\r\n        cursor: pointer;\r\n        background-color: black;\r\n        color: white;\r\n        border-radius: 50px;\r\n        outline: none;\r\n        border: none;\r\n